#include <bits/stdc++.h>

using namespace std;

/*
 * Complete the 'timeConversion' function below.
 *
 * The function is expected to return a STRING.
 * The function accepts STRING s as parameter.
 */

string timeConversion(string s)
{
    string period = s.substr(8, 2);  // "AM" or "PM"
    int hour = stoi(s.substr(0, 2)); // First two characters as integer

    if (period == "AM")
    {
        if (hour == 12)
            hour = 0; // Midnight case
    }
    else
    {
        if (hour != 12)
            hour += 12; // PM case except 12 PM
    }

    string hh = (hour < 10 ? "0" : "") + to_string(hour); // Add leading 0 if needed
    return hh + s.substr(2, 6);                           // Concatenate HH:MM:SS
}

int main()
{
    ofstream fout(getenv("OUTPUT_PATH"));

    string s;
    getline(cin, s);

    string result = timeConversion(s);

    fout << result << "\n";

    fout.close();

    return 0;
}
